<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/containerUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--tara text-->
            <TextView
                android:id="@+id/taraText"
                android:layout_width="91dp"
                android:layout_height="56dp"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="44dp"
                android:text="Tara,"
                android:textColor="@color/selectedText"
                android:textSize="40sp"
                android:textStyle="bold" />

            <!--Name of User-->
            <TextView
                android:id="@+id/userName"
                android:layout_width="201dp"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="44dp"
                android:layout_toEndOf="@+id/taraText"
                android:text="Phil"
                android:textColor="@color/selectedText"
                android:textSize="40sp"
                android:textStyle="bold" />

            <!--notif-->
            <ImageView
                android:id="@+id/notifButton"
                android:layout_width="55dp"
                android:layout_height="47dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="52dp"
                android:layout_toEndOf="@+id/userName"
                android:src="@drawable/notif_btn" />

        </RelativeLayout>


        <!--carousel-->

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerUserName" />

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/search_bar_bg"
            android:drawableStart="@drawable/ic_search"
            android:ems="10"
            android:hint="@string/taraSantayo"
            android:inputType="text"
            android:padding="14sp"
            android:textColor="@color/black"
            android:textColorHint="#BDBDBD"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carousel" />

        <LinearLayout
            android:id="@+id/buttonsContainerHomepage"
            android:layout_width="410dp"
            android:layout_height="99dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchBar">

            <!--nature-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/natureBtn"
                    android:layout_width="90dp"
                    android:layout_height="67dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/nature" />

                <TextView
                    android:id="@+id/textNature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/nature"
                    android:textColor="@color/selectedText"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--products-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/productsBtn"
                    android:layout_width="90dp"
                    android:layout_height="67dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/products" />

                <TextView
                    android:id="@+id/textProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Products"
                    android:textColor="@color/selectedText"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--hotels-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/hotelsBtn"
                    android:layout_width="90dp"
                    android:layout_height="67dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/hotels" />

                <TextView
                    android:id="@+id/textHotels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Hotels"
                    android:textColor="@color/selectedText"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--activities-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/activitiesBtn"
                    android:layout_width="90dp"
                    android:layout_height="67dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/activities" />

                <TextView
                    android:id="@+id/textActivities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Activities"
                    android:textColor="@color/selectedText"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <!--google maps-->

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/maps"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="347dp"
            android:layout_height="275dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="70sp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonsContainerHomepage"
            app:layout_constraintVertical_bias="0.0">

        </androidx.fragment.app.FragmentContainerView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>