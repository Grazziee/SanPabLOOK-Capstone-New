<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sanpablook.study.sanpablook.ActivityRatings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/historyGreenBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_bottom_right">

        <ImageButton
            android:id="@+id/buttonBackAH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:contentDescription="@string/backButton"
            android:padding="15dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/labelActivityHistoryMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/labelRatings"
            android:fontFamily="@font/poppins_semi_bold"
            android:padding="10dp"
            android:text="@string/labelRatings"
            android:textAlignment="textStart"
            android:textColor="@color/light"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/buttonBackAH"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@null"
        android:layout_below="@id/historyGreenBackground">

        <LinearLayout
            android:id="@+id/historyLinearList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/historyGreenBackground">

            <RelativeLayout
                android:id="@+id/userReview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="130dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rounded_corners_20"
                        android:contentDescription="@string/destinationName1"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sampaloc_lake" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/reviewDestination1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cardview1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/destinationName1"
                    android:textColor="@color/darkBlue"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reviewDestination1"
                    android:layout_toEndOf="@id/cardview1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:justificationMode="inter_word"
                    android:maxLines="9"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/review1"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/userReview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="130dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rounded_corners_20"
                        android:contentDescription="@string/destinationName1"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/st_ambrose_chapel" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/reviewDestination2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cardview2"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/destinationName2"
                    android:textColor="@color/darkBlue"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reviewDestination2"
                    android:layout_toEndOf="@id/cardview2"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:justificationMode="inter_word"
                    android:maxLines="9"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/review1"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/userReview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="130dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rounded_corners_20"
                        android:contentDescription="@string/destinationName1"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/paraiso_de_avedad" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/reviewDestination3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cardview3"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/destinationName3"
                    android:textColor="@color/darkBlue"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reviewDestination3"
                    android:layout_toEndOf="@id/cardview3"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:justificationMode="inter_word"
                    android:maxLines="9"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/review1"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>