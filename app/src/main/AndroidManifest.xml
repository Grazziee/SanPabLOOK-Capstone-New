<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Camera -->
    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Capstone"
        tools:targetApi="31">

        <activity
            android:name="sanpablook.study.sanpablook.HotelPalmeras"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.HotelCasa"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.HotelMeding"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.ViewNotification"
            android:exported="false"
            tools:ignore="ExtraText" />
        <activity
            android:name="sanpablook.study.sanpablook.AdminBookingDetails"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.AdminMenu"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.AdminDashboard"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.DineCasaActivity"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.DineSulyapActivity"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.DinePalmerasReservationActivity"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.DinePalmerasActivity"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.UserNotifications"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.ActivityHistory"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.UserSettings"
            android:exported="false" />
        <activity
            android:name="sanpablook.study.sanpablook.BottomNavBar"
            android:exported="true"
            android:screenOrientation="portrait">

            <!-- no rotation -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>